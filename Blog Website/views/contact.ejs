<%- include("header")   -%>
<div class="container">
    <h2>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</h2>
    <form class="flex contact-form" method="post">
        <label for="name">
            <h3>Name:</h3>  <input name="name" placeholder="Enter the Title">
          </label>
        <label for="email">
          <h3>Email:</h3>  <input type="email" name="email" placeholder="Enter your Mail Address">
        </label>
        <label for="phone">
            <h3>Phone:</h3>  <input type="tel" name="phone" placeholder="Enter the Phone Number">
          </label>
        <label for="message">
           <h3> Message:</h3> <textarea row="20" cols="10" name="message" placeholder="Put Your Message Here"></textarea>
        </label>
        <button class="btn-primary">Submit</button>
    </form>

</div>
<%- include("footer")  -%>